<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.techtown.schooler">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".Account.JoinedChannel"
            android:theme="@style/AppTheme3"></activity>
        <activity android:name=".Channels.ChannelsAdminPage" />
        <activity
            android:name=".Channels.ChannelsInfo"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ChannelEvents.CreateChannelEvents"
            android:theme="@style/AppTheme2" />
        <activity android:name=".ChannelEvents.ChannelContent" />
        <activity android:name=".ChannelEvents.UpdateEvents" />
        <activity android:name=".Channels.UploadChannelsThumbnail" />
        <activity android:name=".Channels.FinishCreateChannels" />
        <activity android:name=".Channels.CreateChannel" />
        <activity android:name=".Signup.FinishSignup" />
        <activity android:name=".Signup.PhoneNumberActivity" />
        <activity android:name=".Signup.NotifyActivity" />
        <activity android:name=".Signup.PasswordActivity" />
        <activity android:name=".Signup.ClassActivity" />
        <activity android:name=".Signup.SchoolActivity" />
        <activity android:name=".Signup.IdActivity" />
        <activity android:name=".Signup.EmailActivity" />
        <activity
            android:name=".Signup.SignupOneActivity"
            android:parentActivityName=".StartMemberActivity.LoginActivity" />
        <activity android:name=".SplashActivity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StartMemberActivity.LoginActivity" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>