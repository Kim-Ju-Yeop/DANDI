<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.techtown.schooler">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AccountActivity"></activity>
        <activity android:name=".Channels.ChannelActivity" />
        <activity
            android:name=".Signup.CheckPasswordActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".Channels.ChannelHandling.MemberAllowActivity" />
        <activity
            android:name=".Channels.ChannelHandling.EditChannelAcitivty"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Account.JoinedChannel"/>
        <activity android:name=".Channels.ChannelsInfo" />
        <activity
            android:name=".ChannelEvents.CreateChannelEvents"
            android:theme="@style/AppTheme2"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".ChannelEvents.ChannelContent" />
        <activity android:name=".ChannelEvents.UpdateEvents" />
        <activity android:name=".Channels.ChannelHandling.UploadChannelsThumbnail" />
        <activity android:name=".Channels.CreateChannel.FinishCreateChannels" />
        <activity android:name=".Channels.CreateChannel.CreateChannel" />
        <activity android:name=".Signup.FinishSignup" />
        <activity
            android:name=".Signup.PhoneNumberActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".Signup.NotifyActivity" />
        <activity
            android:name=".Signup.PasswordActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".Signup.ClassActivity" />
        <activity
            android:name=".Signup.SchoolActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Signup.IdActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Signup.EmailActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Signup.SignupOneActivity"
            android:parentActivityName=".StartMemberActivity.LoginActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity android:name=".SplashActivity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StartMemberActivity.LoginActivity" />
        <activity
            android:name=".MainActivity" />
    </application>

</manifest>