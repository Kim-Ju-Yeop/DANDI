<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.techtown.schooler">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        android:screenOrientation="portrait">
        <activity android:name=".Signup.FinishSignup" />
        <activity android:name=".Signup.PhoneNumberActivity" />
        <activity android:name=".Signup.NotifyActivity" />
        <activity android:name=".Signup.PasswordActivity" />
        <activity android:name=".Signup.ClassActivity" />
        <activity android:name=".Signup.SchoolActivity" />
        <activity android:name=".Signup.IdActivity" />
        <activity android:name=".Signup.EmailActivity" />
        <activity
            android:name=".Signup.SignupOneActivity"
            android:parentActivityName=".StartMemberActivity.LoginActivity" />
        <activity android:name=".SplashActivity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StartMemberActivity.LoginActivity" />
        <activity android:name=".MainActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>