<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".ChannelEvents.CreateChannelEvents" >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5pt"
                android:layout_marginTop="11.5pt"
                android:text="TITLE"
                android:textColor="#707070"
                android:textSize="14pt"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="159pt"
            android:layout_height="20pt"
            android:layout_gravity="center"
            android:layout_marginTop="2.5pt"
            android:background="@drawable/register_events"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/title_editText"
                android:layout_width="350dp"
                android:layout_height="43dp"
                android:layout_marginLeft="3dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="일정 제목을 입력해주세요."
                android:inputType="textPersonName"
                android:textSize="6.5pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2.5pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5pt"
                android:layout_marginTop="11.5pt"
                android:text="CONTENT"
                android:textColor="#707070"
                android:textSize="14pt"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="159pt"
            android:layout_height="30pt"
            android:layout_gravity="center"
            android:layout_marginTop="2.5pt"
            android:background="@drawable/register_events"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/content_editText"
                android:layout_width="350dp"
                android:layout_height="30pt"
                android:layout_marginLeft="3dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:hint="일정에 관한 세부적인 내용을 입력해주세요."
                android:inputType="textPersonName"
                android:textSize="6.5pt" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="2.5pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14.5pt"
                android:layout_marginTop="11.5pt"
                android:text="START / END DATE"
                android:textColor="#707070"
                android:textSize="14pt"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/start_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="시작 날짜"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/start_button"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/start_end_button"
                    android:gravity="center"
                    android:onClick="start"
                    android:text="YYYY-MM-DD" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/end_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="종료 날짜"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/end_button"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/start_end_button"
                    android:gravity="center"
                    android:onClick="end"
                    android:text="YYYY-MM-DD" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15pt"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="125pt"
                android:layout_height="29pt"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/add_schedule"
                android:onClick="update"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="15pt"
                        android:layout_height="15pt"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10pt"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="20dp"
                        android:background="@android:color/transparent"
                        android:scaleType="centerCrop"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.113"
                        app:layout_constraintStart_toEndOf="@+id/addSchedule_textView"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.4"
                        app:srcCompat="@drawable/schedule_add_button"
                        tools:ignore="MissingConstraints"
                        android:onClick="update2"/>

                    <TextView
                        android:id="@+id/addSchedule_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="78dp"
                        android:layout_marginLeft="78dp"
                        android:layout_marginTop="11dp"
                        android:layout_marginEnd="133dp"
                        android:layout_marginRight="133dp"
                        android:layout_marginBottom="17dp"
                        android:text="일정 수정하기"
                        android:textColor="#707070"
                        android:textSize="11pt"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.538"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="1.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>