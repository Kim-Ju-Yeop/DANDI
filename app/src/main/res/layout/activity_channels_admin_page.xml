<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Channels.ChannelsAdminPage"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.5pt"
                    android:layout_marginTop="1pt"
                    android:text="NAME"
                    android:textColor="#707070"
                    android:textSize="14pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="159pt"
                android:layout_height="20pt"
                android:layout_gravity="center"
                android:layout_marginTop="1pt"
                android:background="@drawable/register_events"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/EditChannelName"
                    android:layout_width="340dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="5pt"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:enabled="false"
                    android:hint="채널제목은 변경불가"
                    android:inputType="textPersonName"
                    android:textColor="#525252"
                    android:textSize="6.5pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2.5pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.5pt"
                    android:layout_marginTop="6pt"
                    android:text="EXPLAIN"
                    android:textColor="#707070"
                    android:textSize="14pt"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="159pt"
                android:layout_height="30pt"
                android:layout_gravity="center"
                android:layout_marginTop="1pt"
                android:background="@drawable/register_events"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/EditChannelExplain"
                    android:layout_width="340dp"
                    android:layout_height="30pt"
                    android:layout_marginLeft="5pt"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="채널 설명을 입력 해 주세요"
                    android:inputType="textPersonName"
                    android:textSize="6.5pt" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="2.5pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.5pt"
                    android:layout_marginTop="6pt"
                    android:text="COLOR"
                    android:textColor="#707070"
                    android:textSize="14pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="159pt"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1pt"
                android:background="@drawable/register_events"
                android:gravity="center"
                android:orientation="vertical">

                <View
                    android:id="@+id/EditChannelColor"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:onClick="PickColor" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="색을 클릭해서 색상변경"
                    android:textAllCaps="false"
                    android:textColor="#707070" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2.5pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14.5pt"
                    android:layout_marginTop="6pt"
                    android:text="ANOTHER"
                    android:textColor="#707070"
                    android:textSize="14pt"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="159pt"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="1pt"
                android:background="@drawable/register_events"
                android:gravity="center"
                android:orientation="vertical">

                <Switch
                    android:id="@+id/EditChannelIsPublic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:text="가입승인 여부"
                    android:textColor="#525252"
                    android:textSize="18sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/Finish"
                android:layout_width="match_parent"
                android:layout_height="30pt"
                android:layout_margin="10pt"
                android:background="@drawable/add_schedule"
                android:gravity="center"
                android:onClick="ChannelUpdate"
                android:text="채널수정 완료하기"
                android:textColor="#525252"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>