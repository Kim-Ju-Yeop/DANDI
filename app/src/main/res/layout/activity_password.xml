<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup.PasswordActivity"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="toGoBack"
            android:scaleType="fitStart"
            android:src="@drawable/ic_chevron_left_yellow_24dp" />

        <ImageView
            android:id="@+id/next_email"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:onClick="toGoNext"
            android:scaleType="fitEnd"
            android:src="@drawable/ic_chevron_right_yellow_24dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/text_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14.5pt"
        android:layout_marginTop="30dp"
        android:text="비밀번호"
        android:textColor="#707070"
        android:textSize="20pt"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="23.5pt"
        android:layout_marginRight="30dp"
        android:background="@drawable/input_text_box"
        android:orientation="horizontal">

        <TextView
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8pt"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="PW"
            android:textColor="#707070"
            android:textSize="11.5pt"
            android:textStyle="bold" />

        <View
            android:id="@+id/pwBar"
            android:layout_width="1pt"
            android:layout_height="11.5pt"
            android:layout_gravity="center"
            android:background="#f2b705" />

        <EditText
            android:id="@+id/InputPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3.8pt"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="비밀번호"
            android:inputType="textPassword" />

    </LinearLayout>

    <TextView
        android:id="@+id/NoticePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="23.5pt"
        android:layout_marginRight="30dp"
        android:background="@drawable/input_text_box"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8pt"
            android:layout_marginRight="6dp"
            android:layout_weight="1"
            android:text="Check"
            android:textColor="#707070"
            android:textSize="11.5pt"
            android:textStyle="bold" />

        <View
            android:id="@+id/view37"
            android:layout_width="1pt"
            android:layout_height="11.5pt"
            android:layout_gravity="center"
            android:background="#f2b705" />

        <EditText
            android:id="@+id/InputCheckPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="3.8pt"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="비밀번호 확인"
            android:inputType="textPassword" />

    </LinearLayout>

    <TextView
        android:id="@+id/NoticeCheckPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="25dp"
        android:text="TextView" />


</LinearLayout>