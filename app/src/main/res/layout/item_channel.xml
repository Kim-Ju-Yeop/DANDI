<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChannelCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="horizontal"
    app:cardCornerRadius="10dp"
    tools:background="#00000000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5pt"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/channel_Image"
            android:layout_width="25pt"
            android:layout_height="25pt"
            android:layout_gravity="center"
            android:scaleType="centerCrop"></ImageView>

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5pt"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/isPublic_ImageView"
                    android:layout_width="7pt"
                    android:layout_height="7pt"
                    android:layout_gravity="center"
                    tools:srcCompat="@drawable/locked" />

                <TextView
                    android:id="@+id/schedule_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2pt"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="B1ND" />

            </LinearLayout>

            <TextView
                android:id="@+id/Content_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp"
                tools:text="B1ND" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="14sp"
                tools:text="Master : B1ND" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/JoinChannel_Button"
        android:layout_width="30pt"
        android:layout_height="12pt"
        android:layout_gravity="right|center_vertical"
        android:layout_margin="5pt"
        android:background="@drawable/corner"
        android:gravity="center"
        android:textColor="#FDFFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        tools:text="JOIN" />

</androidx.cardview.widget.CardView>