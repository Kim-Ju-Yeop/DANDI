<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChannelCardView"
    android:layout_width="match_parent"
    android:layout_height="88pt"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="30dp"
    app:cardElevation="20dp">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Background_ImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"></ImageView>

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#7C000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginTop="5pt"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Title_TextView"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:text="B1ND"
                android:textColor="#FFFFFF"
                android:textSize="16pt" />

        </LinearLayout>

        <TextView
            android:id="@+id/Content_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10pt"
            android:layout_marginTop="25pt"
            android:text="B1ND"
            android:textColor="#FFFFFF"
            android:textSize="8pt" />

        <ImageView
            android:id="@+id/isPublic_ImageView"
            android:layout_width="7pt"
            android:layout_height="7pt"
            android:layout_gravity="right|top"
            android:layout_marginTop="5pt"
            android:layout_marginRight="5pt "
            app:srcCompat="@drawable/locked" />

        <TextView
            android:id="@+id/JoinChannel_Button"
            android:layout_width="90pt"
            android:layout_height="20pt"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10pt"
            android:background="@drawable/corner"
            android:gravity="center"
            android:text="JOIN"
            android:textColor="#FDFFFFFF"
            android:textSize="10pt" />

        <TextView
            android:id="@+id/MakeUser_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="10pt"
            android:layout_marginBottom="2pt"
            android:text="Master : B1ND"
            android:textColor="#FFFFFF"
            android:textSize="6pt" />

    </FrameLayout>

</androidx.cardview.widget.CardView>