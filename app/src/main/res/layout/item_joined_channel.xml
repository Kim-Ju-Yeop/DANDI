<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChannelCardView"
    android:layout_width="match_parent"
    android:layout_height="40pt"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="5.5pt"
    android:layout_marginRight="20dp"
    app:cardCornerRadius="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/channel_name"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/channel_Image"
            android:layout_width="27pt"
            android:layout_height="27pt"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/noprofileimg" />

        <TextView
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5pt"
            android:maxWidth="180dp"
            android:text="채널 이름"
            android:textColor="#707070"
            android:textSize="10pt"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/isPublic"
                android:layout_width="9pt"
                android:layout_height="9pt"
                android:layout_gravity="right"
                app:srcCompat="@drawable/locked" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>