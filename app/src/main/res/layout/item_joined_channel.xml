<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChannelCardView"
    android:layout_width="140pt"
    android:layout_height="32pt"
    android:layout_gravity="center_horizontal"
    android:layout_marginLeft="12pt"
    android:layout_marginTop="7.5pt"
    android:layout_marginBottom="7.5pt">


    <ImageView
        android:id="@+id/channel_Image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1A000000"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/test_joinedchannel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#99000000"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/channel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12pt"
            android:layout_weight="4"
            android:text="B1ND"
            android:textColor="#FFFFFF"
            android:textSize="12pt"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/isPublic"
            android:layout_width="9pt"
            android:layout_height="9pt"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/locked" />
    </LinearLayout>

</androidx.cardview.widget.CardView>