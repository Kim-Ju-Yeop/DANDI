<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Channels.UploadChannelsThumbnail"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="101dp"
        android:gravity="center"
        android:text="채널 이미지 변경"
        android:textColor="#020202"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="  미리보기"
        android:textColor="#f2b705"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="88pt"
        android:layout_marginTop="10dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Background_ImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"></ImageView>

            <View
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#7C000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="5pt"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Title_TextView"
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:text="B1ND"
                    android:textColor="#FFFFFF"
                    android:textSize="16pt" />

            </LinearLayout>

            <TextView
                android:id="@+id/Content_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10pt"
                android:layout_marginTop="25pt"
                android:text="B1ND"
                android:textColor="#FFFFFF"
                android:textSize="8pt" />

            <ImageView
                android:id="@+id/isPublic_ImageView"
                android:layout_width="7pt"
                android:layout_height="7pt"
                android:layout_gravity="right|top"
                android:layout_marginTop="5pt"
                android:layout_marginRight="5pt"
                app:srcCompat="@drawable/locked" />

            <TextView
                android:id="@+id/JoinChannel_Button"
                android:layout_width="90pt"
                android:layout_height="20pt"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10pt"
                android:background="@drawable/corner"
                android:gravity="center"
                android:text="JOIN"
                android:textColor="#FDFFFFFF"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/MakeUser_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="10pt"
                android:layout_marginBottom="2pt"
                android:text="Master : B1ND"
                android:textColor="#FFFFFF"
                android:textSize="6pt" />

        </FrameLayout>


    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/changeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:onClick="tedPermission"
        android:text="이미지 변경하기"
        android:textColor="#EDAA0C"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/finishImageChange"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_yellow"
            android:gravity="center"
            android:onClick="goToMain"
            android:text="완 료"
            android:textColor="#FFFFFF"
            android:textSize="30sp" />

    </LinearLayout>

</LinearLayout>