<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ChannelCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/schedule_new"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/channel_Image"
            android:layout_width="25pt"
            android:layout_height="25pt"
            android:layout_gravity="center"
            android:layout_marginLeft="4pt"
            android:layout_marginTop="4pt"
            android:layout_marginRight="4pt"
            android:layout_marginBottom="4pt"
            android:scaleType="centerCrop"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="3pt"
            android:gravity="left|center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/schedule_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="140dp"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="TITLE" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="5pt"
                tools:text="2019.10.11 ~ 2019.10.12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/channel_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="channel : B1ND"
                android:textSize="5pt" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="user : 김주엽(Juyeop)"
                android:textSize="5pt" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_layout"
            android:layout_width="11pt"
            android:layout_height="match_parent"
            android:background="@drawable/schedule_new2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tint="#FFFFFF"
                app:srcCompat="@drawable/yellow_arrow" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>